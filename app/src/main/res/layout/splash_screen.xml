<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/background_main_gradient"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_height="match_parent">
    <TextView
        android:text="@string/text_start_screen1"
        android:textSize="25dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/colorInfoText"
        android:foregroundGravity="center"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:layout_gravity="center"
        android:layout_margin="40dp"
        android:foregroundGravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:onClick="splash_screen_close"
        android:src="@drawable/new_logo_main"
        android:id="@+id/imageView2" />
    <TextView
        android:text="@string/text_start_screen2"
        android:textSize="25dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/colorInfoText"
        android:foregroundGravity="center"
        android:layout_height="wrap_content" />

</LinearLayout>